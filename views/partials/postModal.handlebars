<div class="modal fade" id="newPost" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">New Post</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="postTitle" class="form-label">Post Title:</label>
                        <input class="form-control" id="postTitle" placeholder="Whats the title?">
                    </div>
                    <div class="mb-3">
                        <label for="postContent" class="form-label">Post Content:</label>
                        <textarea class="form-control" id="postContent" rows="3" placeholder="What do you want to post?"></textarea>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="button" class="btn btn-secondary m-2" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary m-2">Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>